@model TeknolojiBlogMVC.Models.BlogAndComment
<!DOCTYPE html>
<html lang="en">

<head>

    <!-- Meta Tag -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- SEO -->
    <meta name="description" content="150 words">
    <meta name="author" content="uipasta">
    <meta name="url" content="http://www.yourdomainname.com">
    <meta name="copyright" content="company name">
    <meta name="robots" content="index,follow">


    <title>Blog Detay</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/web2/DevBlog - Personal Blog Template/DevBlog/images/favicon/favicon.ico">
    <link rel="apple-touch-icon" sizes="144x144" type="image/x-icon" href="~/web2/DevBlog - Personal Blog Template/DevBlog/images/favicon/apple-touch-icon.png">

    <!-- All CSS Plugins -->
    <link rel="stylesheet" type="text/css" href="~/web2/DevBlog - Personal Blog Template/DevBlog/css/plugin.css">

    <!-- Main CSS Stylesheet -->
    <link rel="stylesheet" type="text/css" href="~/web2/DevBlog - Personal Blog Template/DevBlog/css/style.css">

    <!-- Google Web Fonts  -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:400,300,500,600,700">

    <!-- Syntax Highlighter  -->
    <link rel="stylesheet" type="text/css" href="~/web2/DevBlog - Personal Blog Template/DevBlog/css/syntax/shCore.css">
    <link rel="stylesheet" type="text/css" href="~/web2/DevBlog - Personal Blog Template/DevBlog/css/syntax/shThemeDefault.css">


    <!-- HTML5 shiv and Respond.js support IE8 or Older for HTML5 elements and media queries -->
    <!--[if lt IE 9]>
       <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
       <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->


</head>

<body>



    <!-- Preloader Start -->
    <div class="preloader">
        <div class="rounder"></div>
    </div>
    <!-- Preloader End -->




    <div id="main">
        <div class="container">
            <div class="row">



                <!-- About Me (Left Sidebar) Start -->
                <div class="col-md-3">
                    <div class="about-fixed">

                        <div class="my-pic">

                            <img src="~/blog resimleri/7.png" />
                            <a href="javascript:void(0)" class="collapsed" data-target="#menu" data-toggle="collapse"><i class="icon-menu menu"></i></a>
                            <div id="menu" class="collapse">
                                <ul class="menu-link">
                                    <li><a href="about.html">About</a></li>
                                    <li><a href="work.html">Work</a></li>
                                    <li><a href="contact.html">Contact</a></li>
                                </ul>
                            </div>
                        </div>



                        <div class="my-detail" style="margin-right:20px;">

                            <div class="white-spacing">

                                <h1>Ulaş Tüzün</h1>
                                <p>Bilgisayar Mühendisi</p>
                            </div>

                            <ul class="social-icon">
                                <li><a href="#" target="_blank" class="facebook"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#" target="_blank" class="twitter"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="#" target="_blank" class="linkedin"><i class="fa fa-linkedin"></i></a></li>
                                <li><a href="#" target="_blank" class="github"><i class="fa fa-github"></i></a></li>
                            </ul>

                        </div>
                    </div>
                </div>
                <!-- About Me (Left Sidebar) End -->
                <!-- Blog Post (Right Sidebar) Start -->
                <div class="col-md-9">
                    <div class="col-md-12 page-body">
                        <div class="row">


                          


                            <div class="col-md-12 content-page">
                                <div class="col-md-12 blog-post">

                                    @foreach (var item in Model.valblog)
                                    {
                                        <div class="post-title">
                                            <h1>@item.Title</h1>
                                        </div>
                                        <!-- Post Headline End -->
                                        <!-- Post Detail Start -->

                                        <!-- Post Detail End -->
                                        <div class="post-image margin-top-40 margin-bottom-40">
                                            <img src="@item.PhotoUrl" alt="">

                                        </div>

                                        <p>@item.BlogContent</p>

                                        <div class="post-info">
                                            <span>@item.ReleaseDate /  <a href="#" target="_blank">Ulaş Tüzün</a></span>
                                        </div>
                                        <!-- Post Image Start -->

                                        <!-- Post Image End -->
                                    }
                                    <!-- Post Headline Start -->



                                </div>



                            </div>

                        </div>




                        <div>
                            @foreach (var item in Model.valcomment)
                            {
                                <ul class="comment-list">

                                    <li>
                                        <img src="~/blog resimleri/images.png" class="img-responsive" alt="" />

                                        <div class="desc">
                                            <p>@item.Comment</p>
                                            <p style="text-align:right;font-size:small;font-style:italic;">~@item.Name @item.Date</p>
                                        </div>
                                        <div class="clearfix"></div>
                                    </li>
                                </ul>
                            }
                            @Html.Action("Comment", "Blog")
                        </div>


                        <!-- Subscribe Form Start -->
                        <!-- Subscribe Form End -->


                    </div>
                    

                    <!-- Footer Start -->
                    <div class="col-md-12 page-body margin-top-50 footer">
                        <footer>


                            <p>© Copyright 2016 Techno Blog.Tüm hakları saklıdır.</p>


                            <!-- UiPasta Credit Start -->
                            <!-- UiPasta Credit End -->


                        </footer>
                    </div>
                    <!-- Footer End -->


                </div>
                <!-- Blog Post (Right Sidebar) End -->

            </div>
        </div>
    </div>




    <!-- Endpage Box (Popup When Scroll Down) Start -->
    <div id="scroll-down-popup" class="endpage-box">
        <h4>Ayrıca Oku</h4>
        <a href="/About/Index/">Technolog nedir?</a>
    </div>
    <!-- Endpage Box (Popup When Scroll Down) End -->
    <!-- Back to Top Start -->
    <a href="#" class="scroll-to-top"><i class="fa fa-long-arrow-up"></i></a>
    <!-- Back to Top End -->
    <!-- All Javascript Plugins  -->
    <script type="text/javascript" src="~/web2/DevBlog - Personal Blog Template/DevBlog/js/jquery.min.js"></script>
    <script type="text/javascript" src="~/web2/DevBlog - Personal Blog Template/DevBlog/js/plugin.js"></script>

    <!-- Main Javascript File  -->
    <script type="text/javascript" src="~/web2/DevBlog - Personal Blog Template/DevBlog/js/scripts.js"></script>

    <!-- Syntax Highlighter Javascript File  -->
    <script type="text/javascript" src="~/web2/DevBlog - Personal Blog Template/DevBlog/js/syntax/shCore.js"></script>
    <script type="text/javascript" src="~/web2/DevBlog - Personal Blog Template/DevBlog/js/syntax/shBrushCss.js"></script>
    <script type="text/javascript" src="~/web2/DevBlog - Personal Blog Template/DevBlog/js/syntax/shBrushJScript.js"></script>
    <script type="text/javascript" src="~/web2/DevBlog - Personal Blog Template/DevBlog/js/syntax/shBrushPerl.js"></script>
    <script type="text/javascript" src="~/web2/DevBlog - Personal Blog Template/DevBlog/js/syntax/shBrushPhp.js"></script>
    <script type="text/javascript" src="~/web2/DevBlog - Personal Blog Template/DevBlog/js/syntax/shBrushPlain.js"></script>
    <script type="text/javascript" src="~/web2/DevBlog - Personal Blog Template/DevBlog/js/syntax/shBrushPython.js"></script>
    <script type="text/javascript" src="~/web2/DevBlog - Personal Blog Template/DevBlog/js/syntax/shBrushRuby.js"></script>
    <script type="text/javascript" src="~/web2/DevBlog - Personal Blog Template/DevBlog/js/syntax/shBrushSql.js"></script>
    <script type="text/javascript" src="~/web2/DevBlog - Personal Blog Template/DevBlog/js/syntax/shBrushVb.js"></script>
    <script type="text/javascript" src="~/web2/DevBlog - Personal Blog Template/DevBlog/js/syntax/shBrushXml.js"></script>

    <!-- Syntax Highlighter Call Function -->
    <script type="text/javascript">
        SyntaxHighlighter.config.clipboardSwf = 'js/syntax/clipboard.swf';
        SyntaxHighlighter.all();
    </script>


</body>
</html>
